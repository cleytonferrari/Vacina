@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var erro = TempData["Erro"] as string;
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <p>Utilize suas credenciais para acessar o sistema.</p>
    @if (!string.IsNullOrEmpty(erro))
    {
        <div class="alert alert-danger" role="alert">
            @erro
        </div>
    }

    <form class="form-inline my-2 my-lg-0" action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
        <input class="form-control mr-sm-2" type="text" name="usuario" placeholder="Usuário" required />
        <input class="form-control mr-sm-2" type="password" name="senha" placeholder="Senha" required />
        <input class="btn btn-outline-primary  mr-sm-0" type="submit" value="login" />
    </form>
</div>